  gem 'sqlite3-ruby', :require => 'sqlite3'
end

group :test do
  gem 'rspec'
  gem 'rspec-rails'
  gem 'cucumber-rails', '>=0.4.0'
  gem 'capybara'
  gem 'database_cleaner'
  gem 'spork', '~> 0.9.0.rc'
  gem 'launchy'
  gem 'akephalos'
  gem 'selenium'
  gem 'selenium-client'
  gem 'nokogiri' # used to parse HTML output form QUnit tests
end